generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("CONNECTION_STRING")
}

model Post {
  id              Int     @id @default(autoincrement())
  title           String
  createdAt       DateTime?  @default(now())
  content         String
  published       Boolean
  publishedAt     DateTime?
  backgroundImage String?
  categories      String[]
  tags            String[]
  summary         String?
  postedBy        String
  updatedAt       DateTime?
  publishedPost   Int?
  type            String?
}

model Category {
  id              Int   @id @default(autoincrement())
  name            String   @unique
  type            String
  childCategories String[]
  mainCategory    String?
}

model PublishedPost {
  id              Int    @id @default(autoincrement())
  title           String
  searchTitle     String
  createdAt       DateTime? @default(now())
  content         String
  published       Boolean
  publishedAt     DateTime?
  backgroundImage String?
  categories      String[]
  tags            String[]
  summary         String?
  postedBy        String
  draftPost       Int?
  updatedAt       DateTime?
  type            String?
}

model User {
  id         Int @id @default(autoincrement())
  username   String    @unique
  password   String
  email      String    @unique
  role       String
  updatedAt  DateTime?
  profilePic String?
  apiKey     String?
}

model Image {
  id          Int @id @default(autoincrement())
  title       String
  day         Int
  month       Int
  year        Int
  data        Bytes
  contentType String
}
